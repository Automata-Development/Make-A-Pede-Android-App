<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/up_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		app:layout_constraintTop_toTopOf="@+id/up_left_arrow"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintRight_toLeftOf="@+id/up_right_arrow"
		app:layout_constraintLeft_toRightOf="@+id/up_left_arrow"
		/>

	<ImageView
		android:id="@+id/down_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="180"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintRight_toLeftOf="@+id/down_right_arrow"
		app:layout_constraintLeft_toRightOf="@+id/down_left_arrow"
		app:layout_constraintBottom_toBottomOf="@+id/down_left_arrow"
		/>

	<ImageView
		android:id="@+id/down_right_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="135"
		app:layout_constraintLeft_toRightOf="@+id/down_arrow"
		app:layout_constraintRight_toRightOf="parent"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintTop_toBottomOf="@+id/right_arrow"
		app:layout_constraintBottom_toTopOf="@+id/power_slider"/>

	<ImageView
		android:id="@+id/down_left_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="-135"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/down_arrow"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintTop_toBottomOf="@+id/left_arrow"
		app:layout_constraintBottom_toTopOf="@+id/power_slider"/>

	<ImageView
		android:id="@+id/up_left_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="-45"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/up_arrow"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintBottom_toTopOf="@+id/left_arrow"/>

	<ImageView
		android:id="@+id/up_right_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="45"
		app:layout_constraintLeft_toRightOf="@+id/up_arrow"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintBottom_toTopOf="@+id/right_arrow"/>

	<ImageView
		android:id="@+id/left_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="-90"
		app:layout_constraintBottom_toTopOf="@+id/down_left_arrow"
		app:layout_constraintTop_toBottomOf="@+id/up_left_arrow"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintLeft_toLeftOf="@+id/down_left_arrow"/>

	<ImageView
		android:id="@+id/right_arrow"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:rotation="90"
		app:layout_constraintBottom_toTopOf="@+id/down_right_arrow"
		app:layout_constraintTop_toBottomOf="@+id/up_right_arrow"
		app:srcCompat="@drawable/ic_arrow"
		app:layout_constraintRight_toRightOf="@+id/down_right_arrow"/>

	<SeekBar
		android:id="@+id/power_slider"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:max="60"
		android:progress="60"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toBottomOf="@+id/down_right_arrow"/>

</android.support.constraint.ConstraintLayout>

